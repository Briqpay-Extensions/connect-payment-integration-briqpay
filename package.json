{
  "name": "commercetools-monorepo",
  "version": "1.0.0",
  "description": "Commercetools monorepo with enabler and processor services",
  "private": true,
  "scripts": {
    "lint": "npm run lint --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "prepare": "husky install"
  },
  "workspaces": [
    "enabler",
    "processor"
  ],
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "npm run lint"
    ]
  },
  "overrides": {
    "lodash": "4.17.23",
    "minimatch": "10.2.1",
    "glob": "11.1.0",
    "test-exclude": "7.0.1"
  }
}
