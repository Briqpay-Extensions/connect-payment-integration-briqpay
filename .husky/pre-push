#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Always validate before pushing
echo "Running commercetools connect validation..."
commercetools connect validate .
if [ $? -ne 0 ]; then
  echo "❌ commercetools connect validation failed"
  exit 1
fi

npm audit --audit-level=low
if [ $? -ne 0 ]; then
  echo "❌ npm audit found vulnerabilities. Push denied."
  exit 1
fi

exit 0
